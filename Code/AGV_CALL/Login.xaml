<Window x:Class="AGV_CALL.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Title="系统登录" Height="285" Width="428" WindowStartupLocation="CenterScreen" WindowStyle="None" BorderBrush="Transparent" KeyDown="Window_KeyDown" Icon="/AGV_CALL;component/Image/company_logo128.ico">
    <Grid>
        <!--背景渐变-->
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0" MappingMode="RelativeToBoundingBox">
                <GradientStop Color="Blue" Offset="1.0"/>
                <GradientStop Color="White" Offset="0.6"/>
                <GradientStop Color="FloralWhite" Offset="0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Grid.RowDefinitions>
            <!--布局为三行一列-->
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="161*" />
        </Grid.RowDefinitions>
        <!--添加控件-->
        <Label Grid.Row="3" Height="28" Margin="156,0,0,143" Name="label1" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="54.264" Foreground="Blue" FontSize="14">用户名:</Label>
        <TextBox Grid.Row="3" Height="28" Margin="0,0,66,143" Name="UserNametextBox" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="124" Text="admin" FontSize="14" />
        <Label Grid.Row="3" Height="28" Margin="166,0,0,96" Name="label2" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="44.268" Foreground="Blue" FontSize="14">密码:</Label>
        <PasswordBox Grid.Row="3" Height="29" Margin="0,0,66,91" Name="passwordBox" VerticalAlignment="Bottom" Password="admin" FontSize="14" HorizontalAlignment="Right" Width="124" />
        <Button Grid.Row="3" Height="32" Margin="227,0,0,22" Name="Loginbutton" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="66" Click="Loginbutton_Click" FontSize="16" Foreground="Blue"  FontWeight="Bold">登陆</Button>
        <Button Grid.Row="3" Height="32" HorizontalAlignment="Right" Margin="0,0,20,22" Name="Exitbutton" VerticalAlignment="Bottom" Width="65" Click="Exitbutton_Click" FontSize="16" Foreground="Blue" FontWeight="Bold">退出</Button>
        <Label Content="欢迎登录AGV叫料系统" Grid.Row="3" Height="33" HorizontalAlignment="Left" Margin="95,17,0,0" Name="label3" VerticalAlignment="Top" Width="216" Foreground="Blue" FontWeight="Bold" FontSize="20" />
        <Image Grid.Row="3" HorizontalAlignment="Left" Margin="23,75,0,0" Name="image1" Stretch="None" VerticalAlignment="Top" Source="/AGV_CALL;component/Image/company_logo128.ico" />
    </Grid>
</Window>
